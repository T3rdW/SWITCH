{
    "bsonType": "object",
    "required": ["switch_name", "switch_name_en", "manufacturer", "switch_type"],
    "permission": {
        "read": true,
        "create": false,
        "update": false,
        "delete": false
    },
    "properties": {
        "_id": {
            "description": "ID，系统自动生成"
        },
        "switch_name": {
            "bsonType": "string",
            "description": "轴体名称",
            "title": "名称"
        },
        "switch_name_en": {
            "bsonType": "string",
            "description": "轴体英文名称",
            "title": "英文名称"
        },
        "images": {
            "bsonType": "array",
            "description": "轴体图片数组",
            "items": {
                "bsonType": "object",
                "required": ["fileID", "type", "fileName", "uploadTime"],
                "properties": {
                    "fileID": {
                        "bsonType": "string",
                        "description": "云存储文件ID"
                    },
                    "type": {
                        "bsonType": "string",
                        "description": "图片类型",
                        "enum": ["main", "detail", "official", "top", "stem", "spring", "bottom", "side", "housing", "other"]
                    },
                    "fileName": {
                        "bsonType": "string",
                        "description": "文件名"
                    },
                    "uploadTime": {
                        "bsonType": "string",
                        "description": "上传时间",
                        "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}$"
                    },
                    "updateTime": {
                        "bsonType": "string",
                        "description": "更新时间",
                        "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}$"
                    }
                }
            }
        },
        "manufacturer": {
            "bsonType": "string",
            "description": "代工厂",
            "title": "制造商"
        },
        "switch_type": {
            "bsonType": "string",
            "description": "轴体类型",
            "title": "轴体类型"
        },
        "stem_material": {
            "bsonType": "string",
            "description": "轴芯材质",
            "title": "轴芯材质"
        },
        "top_housing_material": {
            "bsonType": "string",
            "description": "上盖材质",
            "title": "上盖材质"
        },
        "bottom_housing_material": {
            "bsonType": "string",
            "description": "底壳材质",
            "title": "底壳材质"
        },
        "actuation_force": {
            "bsonType": "string",
            "description": "触发压力",
            "title": "触发压力"
        },
        "actuation_travel": {
            "bsonType": "string",
            "description": "触发行程",
            "title": "触发行程"
        },
        "bottom_force": {
            "bsonType": "string",
            "description": "触底压力",
            "title": "触底压力"
        },
        "bottom_out_travel": {
            "bsonType": "string",
            "description": "触底行程",
            "title": "触底行程"
        },
        "total_travel": {
            "bsonType": "string",
            "description": "总行程",
            "title": "总行程"
        },
        "spring_length": {
            "bsonType": "string",
            "description": "弹簧长度",
            "title": "弹簧长度"
        },
        "price": {
            "bsonType": "number",
            "description": "价格",
            "title": "价格"
        },
        "factory_lube": {
            "bsonType": "bool",
            "description": "是否出厂润滑",
            "title": "出厂润滑"
        },
        "lifespan": {
            "bsonType": "string",
            "description": "使用寿命",
            "title": "使用寿命"
        },
        "release_date": {
            "bsonType": "string",
            "description": "上市时间",
            "title": "上市时间"
        },
        "discontinued": {
            "bsonType": "bool",
            "description": "是否停产",
            "title": "是否停产"
        },
        "data_source": {
            "bsonType": "string",
            "description": "数据来源",
            "title": "数据来源"
        },
        "remark": {
            "bsonType": "string",
            "description": "备注信息",
            "title": "备注"
        },
        "create_time": {
            "bsonType": "string",
            "description": "创建时间",
            "title": "创建时间"
        },
        "update_time": {
            "bsonType": "string",
            "description": "更新时间",
            "title": "更新时间"
        },
        "audit_status": {
            "bsonType": "string",
            "enum": ["pending", "approved", "rejected"],
            "description": "审核状态"
        },
        "audit_by": {
            "bsonType": "string",
            "description": "审核者的openid"
        },
        "audit_time": {
            "bsonType": "string",
            "description": "审核时间"
        },
        "created_by": {
            "bsonType": "string",
            "description": "创建者的openid"
        },
        "updated_by": {
            "bsonType": "string",
            "description": "最后更新者的openid"
        },
        "related_keyboards": {
            "bsonType": "array",
            "description": "相关键盘型号",
            "items": {
                "bsonType": "string"
            }
        }
    }
}