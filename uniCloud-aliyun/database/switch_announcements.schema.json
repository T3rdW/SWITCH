{
    "bsonType": "object",
    "required": ["content", "status"],
    "permission": {
        "read": true,
        "create": false,
        "update": false,
        "delete": false
    },
    "properties": {
        "_id": {
            "description": "ID，系统自动生成"
        },
        "content": {
            "bsonType": "string",
            "description": "通告内容",
            "title": "内容"
        },
        "status": {
            "bsonType": "string",
            "enum": ["active", "inactive"],
            "description": "通告状态",
            "title": "状态",
            "defaultValue": "active"
        },
        "type": {
            "bsonType": "string",
            "enum": ["info", "warning", "error"],
            "description": "通告类型",
            "title": "类型",
            "defaultValue": "info"
        },
        "create_time": {
            "bsonType": "string",
            "description": "创建时间",
            "title": "创建时间"
        },
        "update_time": {
            "bsonType": "string",
            "description": "更新时间",
            "title": "更新时间"
        },
        "start_time": {
            "bsonType": "string",
            "description": "开始展示时间",
            "title": "开始时间"
        },
        "end_time": {
            "bsonType": "string",
            "description": "结束展示时间",
            "title": "结束时间"
        }
    }
}