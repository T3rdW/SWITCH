/* 水平间距 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}
.swiper {
  height: 300px;
  background-color: #fff;
}
.swiper .swiper-item {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}
.swiper .swiper-item .image-wrapper {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.swiper .swiper-item .image-wrapper .image-type-tag {
  position: absolute;
  top: 10px;
  right: 10px;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
  padding: 4px 8px;
  border-radius: 4px;
  font-size: 12px;
  z-index: 2;
  display: flex;
  align-items: center;
  gap: 4px;
  cursor: pointer;
}
.swiper .swiper-item .image-wrapper .image-type-tag:active {
  opacity: 0.8;
}
.swiper .swiper-item .image-wrapper .image-type-tag .edit-icon {
  font-size: 12px;
  margin-left: 4px;
}
.swiper .swiper-item .image-wrapper .switch-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}
.info-list {
  margin-top: 10px;
}
.info-list .uni-list-item .uni-list-item__container {
  flex: 1;
  flex-direction: row;
  padding: 12px 15px;
}
.info-list .uni-list-item .uni-list-item__content {
  flex: none;
  width: 100px;
}
.info-list .uni-list-item .uni-list-item__content-title {
  font-size: 14px;
  color: #666;
  white-space: nowrap;
}
.info-list .uni-list-item .uni-list-item__extra {
  flex: 1;
  overflow: visible;
  align-items: flex-end;
}
.info-list .uni-list-item .uni-list-item__extra-text {
  font-size: 14px;
  color: #333;
  text-align: right;
  white-space: normal;
  word-break: break-all;
  line-height: 1.4;
  width: 100%;
  padding-left: 15px;
  padding-right: 15px;
}
.image-manage-trigger {
  position: fixed;
  top: 0;
  right: 0;
  width: 50px;
  height: 50px;
  z-index: 100;
}
.image-manage-trigger:active {
  background-color: rgba(255, 0, 0, 0.1);
}
.empty-image {
  width: 100%;
  height: 200px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f5f5f5;
  margin-bottom: 15px;
  color: #999;
}
.edit-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}
.edit-overlay .edit-container {
  background-color: #fff;
  border-radius: 8px;
  width: 90%;
  max-width: 600px;
  padding: 20px;
}
.edit-overlay .edit-container .edit-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}
.edit-overlay .edit-container .edit-header .edit-title {
  font-size: 16px;
  font-weight: bold;
}
.edit-overlay .edit-container .edit-header .close-btn {
  font-size: 24px;
  color: #999;
  padding: 0 10px;
  cursor: pointer;
}
.edit-overlay .edit-container .edit-header .close-btn:active {
  opacity: 0.7;
}
.edit-overlay .edit-container .edit-image-container {
  position: relative;
  width: 100%;
  height: 200px;
  margin-bottom: 15px;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}
.edit-overlay .edit-container .edit-image-container .type-selector {
  position: absolute;
  top: 10px;
  right: 10px;
  z-index: 2;
}
.edit-overlay .edit-container .edit-image-container .type-selector .picker-content {
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
  padding: 4px 8px;
  border-radius: 4px;
  font-size: 12px;
  display: flex;
  align-items: center;
  gap: 4px;
  min-width: 50px;
  height: 18px;
  justify-content: center;
}
.edit-overlay .edit-container .edit-image-container .type-selector:active {
  opacity: 0.8;
}
.edit-overlay .edit-container .edit-image-container .type-selector .picker-arrow {
  font-size: 12px;
  margin-left: 4px;
  color: #fff;
}
.edit-overlay .edit-container .edit-image-container .nav-btn {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 40px;
  height: 40px;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  z-index: 1;
}
.edit-overlay .edit-container .edit-image-container .nav-btn.prev {
  left: 10px;
}
.edit-overlay .edit-container .edit-image-container .nav-btn.next {
  right: 10px;
}
.edit-overlay .edit-container .edit-image-container .nav-btn .nav-icon {
  color: #fff;
  font-size: 24px;
  font-weight: bold;
}
.edit-overlay .edit-container .edit-image-container .nav-btn:active {
  background-color: rgba(0, 0, 0, 0.7);
}
.edit-overlay .edit-container .edit-image-container .edit-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}
.edit-overlay .edit-container .edit-buttons {
  display: flex;
  flex-direction: column;
  gap: 12px;
}
.edit-overlay .edit-container .edit-buttons .btn-row {
  display: flex;
  gap: 10px;
}
.edit-overlay .edit-container .edit-buttons .btn-row .btn {
  flex: 1;
}
.edit-overlay .edit-container .edit-buttons .btn {
  margin: 0;
  font-size: 14px;
  height: 40px;
  line-height: 40px;
}
.edit-overlay .edit-container .edit-buttons .btn.add {
  background-color: #4CAF50;
}
.edit-overlay .edit-container .edit-buttons .btn.delete {
  background-color: #f44336;
}
.edit-overlay .edit-container .edit-buttons .btn.cancel {
  background-color: #999;
}
.edit-overlay .edit-container .edit-buttons .btn:active {
  opacity: 0.8;
}
.edit-overlay .edit-container .image-indicators {
  display: flex;
  justify-content: center;
  gap: 8px;
  margin-bottom: 15px;
}
.edit-overlay .edit-container .image-indicators .indicator-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background-color: #ddd;
  cursor: pointer;
}
.edit-overlay .edit-container .image-indicators .indicator-dot.active {
  background-color: #4CAF50;
  transform: scale(1.2);
}
.edit-overlay .edit-container .image-indicators .indicator-dot:active {
  opacity: 0.8;
}
.switch-image {
  width: 100%;
  height: 100%;
  /* 添加点击反馈 */
}
.switch-image:active {
  opacity: 0.8;
}