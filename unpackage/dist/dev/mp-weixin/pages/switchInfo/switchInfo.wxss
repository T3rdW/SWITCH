/* 水平间距 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}
.swiper {
  height: 300px;
  background-color: #fff;
}
.swiper .swiper-item {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}
.swiper .swiper-item .switch-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}
.info-list {
  margin-top: 10px;
}
.info-list .uni-list-item .uni-list-item__container {
  flex: 1;
  flex-direction: row;
  padding: 12px 15px;
}
.info-list .uni-list-item .uni-list-item__content {
  flex: none;
  width: 100px;
}
.info-list .uni-list-item .uni-list-item__content-title {
  font-size: 14px;
  color: #666;
  white-space: nowrap;
}
.info-list .uni-list-item .uni-list-item__extra {
  flex: 1;
  overflow: visible;
  align-items: flex-start;
}
.info-list .uni-list-item .uni-list-item__extra-text {
  font-size: 14px;
  color: #333;
  text-align: left;
  white-space: normal;
  word-break: break-all;
  line-height: 1.4;
  width: 100%;
}
.info-list .uni-list-item.related-keyboards .uni-list-item__extra-text {
  padding: 8px 0;
  min-height: 44px;
}