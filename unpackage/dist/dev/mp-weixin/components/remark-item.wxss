/* 水平间距 */
.remark-item {
  background-color: #fff;
  padding: 12px 15px;
  display: flex;
}
.remark-item .title {
  flex: none;
  width: 100px;
  font-size: 14px;
  color: #666;
}
.remark-item .content {
  flex: 1;
  font-size: 14px;
  color: #333;
  text-align: left;
  padding-left: 15px;
  line-height: 1.4;
  word-break: break-all;
}